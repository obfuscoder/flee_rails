- content_for :title, t('.title')
%table.table.table-condensed.table-hover.table-striped
  %tr
    %th= t('position')
    %th= Event.human_attribute_name :name
    %th= Event.human_attribute_name :shopping_start
    %th= Event.human_attribute_name :reservation_start
    %th= link_to t('new'), new_admin_event_path


  - @events.each_with_index do |event, index|
    %tr
      %td= index+1
      %td= event.name
      %td= event.shopping_start
      %td= event.reservation_start
      %td
        = link_to t('show'), [:admin, event]
        = link_to t('edit'), edit_admin_event_path(event)
        = link_to t('destroy'), [:admin, event], method: :delete, data: { confirm: t('sure') }
