= simple_form_for([:admin, @event]) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :details
    = f.input :max_sellers
    = f.input :max_items_per_seller
    = f.input :price_precision, hint: t('.price_precision.hint')
    = f.input :commission_rate, hint: t('.commission_rate.hint')
    = f.input :donation_of_unsold_items_enabled if brand_settings.donation_of_unsold_items_enabled
    = f.input :seller_fee
    = f.input :confirmed
    = f.input :shopping_start, as: :string, input_html: { value: l(@event.shopping_start, format: :short) }
    = f.input :shopping_end, as: :string, input_html: { value: l(@event.shopping_end, format: :short) }
    = f.input :reservation_start, as: :string, input_html: { value: l(@event.reservation_start, format: :short) }
    = f.input :reservation_end, as: :string, input_html: { value: l(@event.reservation_end, format: :short) }
    = f.input :handover_start, as: :string, input_html: { value: l(@event.handover_start, format: :short) }
    = f.input :handover_end, as: :string, input_html: { value: l(@event.handover_end, format: :short) }
    = f.input :pickup_start, as: :string, input_html: { value: l(@event.pickup_start, format: :short) }
    = f.input :pickup_end, as: :string, input_html: { value: l(@event.pickup_end, format: :short) }

  .form-actions
    = f.button :submit
