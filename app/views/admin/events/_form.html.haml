= simple_form_for [:admin, @event] do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :details
    = f.input :max_sellers
    = f.input :max_items_per_seller
    = f.input :confirmed
    #shopping_periods.form-inline
      %strong Verkaufstermin(e)
      = f.simple_fields_for :shopping_periods do |s|
        = render 'shopping_period_fields', f: s
      .links
        = link_to_add_association f, :shopping_periods, class: 'btn btn-primary' do
          = enhance_name_with_icon '', icon: :plus
    = f.input :reservation_start, as: :string, input_html: { value: l(f.object.reservation_start, format: :short) }
    = f.input :reservation_end, as: :string, input_html: { value: l(f.object.reservation_end, format: :short) }
    = f.input :handover_start, as: :string, input_html: { value: l(f.object.handover_start, format: :short) }
    = f.input :handover_end, as: :string, input_html: { value: l(f.object.handover_end, format: :short) }
    = f.input :pickup_start, as: :string, input_html: { value: l(f.object.pickup_start, format: :short) }
    = f.input :pickup_end, as: :string, input_html: { value: l(f.object.pickup_end, format: :short) }
    = f.input :price_precision, hint: t('.price_precision.hint')
    = f.input :commission_rate, hint: t('.commission_rate.hint')
    = f.input :donation_of_unsold_items_enabled if brand_settings.donation_of_unsold_items_enabled
    = f.input :seller_fee

  .form-actions
    = f.button :submit
