- content_for :title, t('.title')
%table.table.table-condensed.table-hover.table-striped
  %tr
    %th= Reservation.human_attribute_name :number
    %th= Seller.human_attribute_name :name
    %th= Seller.human_attribute_name :city
    %th= Seller.human_attribute_name :email
    %th= Seller.human_attribute_name :item_count
    %th= link_to t('.new'), new_admin_event_reservation_path
  - @reservations.each do |reservation|
    %tr
      %td= reservation.number
      %td= link_to reservation.seller.name, admin_seller_path(reservation.seller)
      %td= reservation.seller.city
      %td= reservation.seller.email
      %td= reservation.seller.reservations.joins(:items).count
      %td= link_to t('destroy'), [:admin, reservation.event, reservation], method: :delete, data: { confirm: t('sure') }
