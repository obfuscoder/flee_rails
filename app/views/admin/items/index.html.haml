- content_for :title, t('.title')
%table.table.table-condensed.table-hover.table-striped
  %tr
    %th= t('position')
    %th= Item.human_attribute_name :category
    %th= Item.human_attribute_name :description
    %th= Item.human_attribute_name :size
    %th= Item.human_attribute_name :price
    %th= Item.human_attribute_name :code
    %th
  - @items.each_with_index do |item, index|
    %tr
      %td= index+1
      %td= item.category
      %td= item.description
      %td= item.size
      %td= number_to_currency(item.price)
      %td= item.code
      %td= icon_link_to t('destroy'), admin_reservation_item_path(@reservation, item), method: :delete, type: :danger, icon: :trash, data: { confirm: t('.destroy.confirm') }
      - if item.number.present?
        %td= icon_link_to t('delete_code'), code_admin_reservation_item_path(@reservation, item), method: :delete, type: :warning, icon: :tag, data: { confirm: t('.delete_code.confirm') }
= link_to 'Alle Etiketten freigeben', codes_admin_reservation_items_path(@reservation), method: :delete, type: :warning, icon: :tag, data: { confirm: t('.delete_all_codes.confirm') }
