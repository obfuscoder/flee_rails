= simple_form_for [:admin, @reservation, @item] do |f|
  = f.error_notification
  .form-inputs
    = f.association :category, collection: @categories, include_blank: t('.category.blank')
    %p.help-block#donation-enforced-hint= t('.donation.hint') if current_client.donation_of_unsold_items
    = f.input :description
    = f.input :size
    = f.input :price, html5: false
    = f.input :donation if current_client.donation_of_unsold_items
  .form-actions
    = f.button :submit
