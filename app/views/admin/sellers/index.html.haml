- content_for :title, t('.title')
%table.table.table-condensed.table-hover.table-striped
  %tr
    %th= t('position')
    %th= Seller.human_attribute_name :name
    %th= Seller.human_attribute_name :email
    %th= Seller.human_attribute_name :item_count
    %th= Seller.human_attribute_name :active
    %th= link_to t('.new'), new_admin_seller_path


  - @sellers.each_with_index do |seller, index|
    %tr
      %td= index+1
      %td= seller.name
      %td= seller.email
      %td= seller.items.count
      %td= seller.active
      %td
        = link_to t('show'), [:admin, seller]
        = link_to t('edit'), edit_admin_seller_path(seller)
        = link_to t('.items'), admin_seller_items_path(seller)
        = link_to t('destroy'), [:admin, seller], method: :delete, data: { confirm: t('sure') }
