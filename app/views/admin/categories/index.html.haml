- content_for :title, t('.title')
%table.table.table-condensed.table-hover.table-striped
  %tr
    %th= t('position')
    %th= Category.human_attribute_name :name
    %th= link_to t('.new'), new_admin_category_path


  - @categories.each_with_index do |category, index|
    %tr
      %td= index+1
      %td= category.name
      %td
        = link_to t('edit'), edit_admin_category_path(category)
        = link_to t('destroy'), [:admin, category], method: :delete, data: { confirm: t('sure') }
