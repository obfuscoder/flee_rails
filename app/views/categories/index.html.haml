- content_for :title, t('.title')

%table
  %tr
    %th= Category.human_attribute_name :name
    %th= link_to t('new'), new_category_path

  - @categories.each do |category|
    %tr
      %td= category.name
      %td
        = link_to t('show'), category
        = link_to t('edit'), edit_category_path(category)
        = link_to t('destroy'), category, method: :delete, data: { confirm: t('sure') }
