%h1 Listing items

%table
  %tr
    %th Seller
    %th Category
    %th Description
    %th Size
    %th Price
    %td= link_to 'New', new_item_path

  - @items.each do |item|
    %tr
      %td= link_to item.seller, item.seller
      %td= item.category
      %td= item.description
      %td= item.size
      %td= item.price
      %td= link_to 'Show', item
      %td= link_to 'Edit', edit_item_path(item)
      %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

